<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="codeAPP.paginas.registro">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Nombre:"></Label>
                <Entry Placeholder="Introduzca nombre" x:Name="txtNom"/>
                <Label Text="Correo/usuario"/>
                <Entry Placeholder="Introduzca correo o usuario" Keyboard="Email" x:Name="txtCor"/>
                <Label Text="Contraseña: "/>
                <Entry Placeholder="************" IsPassword="True" x:Name="txtCon"/>
                <Button x:Name="btn_registrar_usuario" Text="Agregar" Clicked="btn_registrar_usuario_Clicked"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>